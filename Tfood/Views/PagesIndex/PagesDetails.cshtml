@model Tfood.Models.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item active"><a>@Model.Title</a></li>
            </ol>
        </div>
    </div>

    <div class="row">
        
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="profile-tab">
                        <div class="custom-tab-1">

                            <div class="tab-content">
                                <div id="my-posts" class="tab-pane fade active show">
                                    <div class="my-post-content pt-3">

                                        <div class="profile-uoloaded-post border-bottom-1 pb-5">
                                            <a class="post-title" href="javascript:void()">
                                                <h1 class="text-center">@Model.Title</h1>
                                            </a>
                                            <br />
                                            <br />
                                            <br />
                                            <br />
                                            <br />
                                            <h4 class="font-weight-bold text-primary"><i class="fa fa-calendar" aria-hidden="true"></i> Ngày đăng: @Model.CreateDate.Value.ToString("dd/MM/yyyy")</h4>


                                            <div>@Html.Raw(@Model.Contents)</div>

                                        </div>


                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>