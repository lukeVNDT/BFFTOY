@model Tfood.Models.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Chi tiết pages</h4>
        </div>
        <div class="card-body">
            <div class="row">
        <div class = "col-sm-2">
            Tên pages:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </div>
        
        <hr />
        <div class = "col-sm-2">
            Ảnh đại diện:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Thumb)
        </div>
        <hr />
        <div class = "col-sm-2">
            Công khai:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </div>
        <hr />
        <div class = "col-sm-2">
            Title:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </div>
        <hr />
        <div class = "col-sm-2">
            MetaDesc:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.MetaDesc)
        </div>
        <hr />
        <div class = "col-sm-2">
            MetaKey:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.MetaKey)
        </div>
        <hr />
        <div class = "col-sm-2">
            Alias:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </div>
        <hr />
        <div class = "col-sm-2">
            Thứ tự sắp xếp:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Sequence)
        </div>
        <hr />
       
        <div class = "col-sm-2">
            Icon:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Icon)
        </div>
        <hr />
        <div class = "col-sm-2">
            Ngày tạo:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </div>

    </div>
        </div>
    </div>



    <div class="card">
        <div class="card-header">
            <strong>Nội dung</strong>
        </div>
        <div class="card-body">
            @Html.Raw(Model.Contents)

            <div class="mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Cập nhật</a> |
    <a class="btn btn-secondary" asp-action="Index">Trở về trang trước</a>
</div>
        </div>
    </div>
    

</div>