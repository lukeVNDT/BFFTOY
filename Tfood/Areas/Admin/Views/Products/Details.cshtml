@model Tfood.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Chi tiết sản phẩm</h4>
        </div>
        <div class="card-body">
            <div class="row">
        <div class = "col-sm-2">
            Tên sản phẩm:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </div>
        <hr />
        <div class = "col-sm-2">
            Mô tả ngắn:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDesc)
        </div>
        <hr />
        <div class = "col-sm-2">
            Mô tả chi tiết:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </div>
        <hr />
        <div class = "col-sm-2">
            Giá:
        </div>
        
        <div class = "col-sm-10">
            @Model.Price.Value.ToString("#,##0") VNĐ
        </div>
        <hr />
        
        <div class = "col-sm-2">
            Ảnh đại diện sản phẩm:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Thumb)
        </div>
        <hr />
        <div class = "col-sm-2">
            Ngày tạo:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </div>
        <hr />
        <div class = "col-sm-2">
            Bán chạy:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.IsBestSeller)
        </div>
        <hr />
        <div class = "col-sm-2">
            Ghim ở Trang chủ:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeFlag)
        </div>
        <hr />
        <div class = "col-sm-2">
            Kích hoạt:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </div>
        <hr />
        <div class = "col-sm-2">
            Tags:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </div>
        <hr />
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </div>
        <hr />
        <div class = "col-sm-2">
            Alias:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </div>
        <hr />
        <div class = "col-sm-2">
            MetaDesc:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.MetaDesc)
        </div>
        <hr />
        <div class = "col-sm-2">
            MetaKey:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.MetaKey)
        </div>
        <hr />
        <div class = "col-sm-2">
            Số lượng:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitInStock)
        </div>
        <hr />
        <div class = "col-sm-2">
            Danh mục:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Cat.Name)
        </div>

    </div>
    <div class="mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Cập nhật</a> |
    <a class="btn btn-secondary" asp-action="Index">Trở về trang trước</a>
</div>
        </div>
    </div>
    

</div>