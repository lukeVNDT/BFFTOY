@model Tfood.Models.Post

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Chi tiết bài viết</h4>
        </div>
        <div class="card-body">
            <div class="row">
        <div class = "col-sm-2">
            Tiêu đề:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </div>
        <hr />
        <div class = "col-sm-2">
            Mô tả ngắn:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDesc)
        </div>
        <hr />

        <div class = "col-sm-2">
            Tác giả:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </div>
        <hr />
        <div class = "col-sm-2">
            Danh mục:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Cat.Name)
        </div>
        <hr />
        <div class = "col-sm-2">
            Ảnh đại diện sản phẩm:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Thumb)
        </div>
        <hr />
        
        <div class = "col-sm-2">
            Hot:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.IsHot)
        </div>
        <hr />
        <div class = "col-sm-2">
            Tin mới:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.IsNewFeed)
        </div>
        <hr />
        <div class = "col-sm-2">
            Công khai:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </div>
        <hr />
        <div class = "col-sm-2">
            Alias:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </div>
        <hr />
        <div class = "col-sm-2">
            MetaDesc:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.MetaDesc)
        </div>
        <hr />
        <div class = "col-sm-2">
            MetaKey:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.MetaKey)
        </div>
        <hr />
        <div class = "col-sm-2">
            Ngày tạo:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </div>

    </div>
    
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <strong>Nội dung</strong>
        </div>
        <div class="card-body">
            @Html.Raw(Model.Contents)

            <div class="mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Cập nhật</a> |
    <a class="btn btn-secondary" asp-action="Index">Trở về trang trước</a>
</div>
        </div>
    </div>
    

</div>