@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Tfood.Models.PostCategory>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="form-head d-flex mb-3 align-items-start">
        <div class="mr-auto d-none d-lg-block">
            <h3>Bảng liệt kê danh mục bài viết</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-primary">Dashboard</a></li>
                <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="PostCategories" asp-action="Index">Danh sách danh mục bài viết</a></li>
            </ol>
        </div>
        <div class="dropdown mb-md-3 mb-2 ml-auto">
            <a class="btn btn-success create-button" asp-action="Create">
                <span>Tạo</span>
            </a>
        </div>
    </div>
    <!-- row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <th style="width:80px;">STT</th>
                                    <th>Tên danh mục</th>
                                    <th>Mô tả</th>
                                    <th>Ảnh đại diện</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <img id="imgReview" alt="Ảnh" src="/images/postcategories/@item.Thumb" width="150" height="150" />
                                            </td>
                                            <td>

                                                <div class="d-flex">
                                                    <a asp-controller="PostCategories" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary shadow btn-xs sharp mr-1"><i class="fa fa-eye"></i></a>
                                                    <a asp-controller="PostCategories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary shadow btn-xs sharp mr-1"><i class="fa fa-pencil"></i></a>
                                                    <form method="post" id="deleteForm" asp-action="Delete" asp-route-id="@item.Id">
                                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                        <button data-categoryid="@item.Id" type="button" class="btn btn-danger shadow btn-xs sharp delete-btn"><i class="fa fa-trash"></i></button>
                                                    </form>
                                                </div>


                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="PostCategories" asp-action="Index"/>
  </ul>
</nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        //delete
        $('.delete-btn').click(function() {
            let categoryid = $(this).attr('data-categoryid');
            that = $(this);

            Swal.fire({
                title: 'Thông báo?',
                text: "Bạn có chắc muốn xóa danh mục này?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xóa'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'POST',
                        url: '/Admin/PostCategories/Delete/' + categoryid,
                        contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                        beforeSend: function(xhr) {
                            xhr.setRequestHeader("RequestVerificationToken",
                                $('input:hidden[name="__RequestVerificationToken"]').val());
                        },
                        success: function(result) {
                            // Display a success notification
                            notyf.success('Xóa danh mục thành công!');
                            that.parent().parent().parent().parent().remove();
                        }
                    });
                }
            });
        });
    </script>
}