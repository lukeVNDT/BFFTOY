@model Tfood.Models.PostCategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Chi tiết danh mục</h4>
        </div>
        <div class="card-body">
            <div class="row">
        <div class = "col-sm-2">
            Tên danh mục:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </div>
        <hr />
        <div class = "col-sm-2">
            Mô tả:
        </div>
        
        <div class = "col-sm-10">
            @Html.Raw(Model.Description)
        </div>
        <hr />
        <div class = "col-sm-2">
            Ảnh đại diện:
        </div>
        
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Thumb)
        </div>

    </div>
    <div class="mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Cập nhật</a> |
    <a class="btn btn-secondary" asp-action="Index">Trở về trang trước</a>
</div>
        </div>
    </div>
    

</div>